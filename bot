import discord
from discord.ext import commands
import random
import ollama
from TTS.api import TTS
from flask import Flask
from threading import Thread

bot = commands.Bot(command_prefix="/", intents=discord.Intents.all())

@bot.event
async def on_ready():
    print(f'âœ… Bot siap! Masuk sebagai {bot.user}')

# ğŸ”¥ AI Chat Assistant (Mistral-7B via Ollama)
@bot.command()
async def jawab(ctx, *, pertanyaan):
    response = ollama.chat("mistral", messages=[{"role": "user", "content": pertanyaan}])
    await ctx.send(response["message"]["content"])

# ğŸ¤ AI TTS (Bot Bicara di Voice Channel)
@bot.command()
async def ngomong(ctx, *, teks):
    tts = TTS("tts_models/en/jenny/jenny")
    tts.tts_to_file(teks, file_path="output.wav")

    voice_channel = ctx.author.voice.channel
    vc = await voice_channel.connect()
    vc.play(discord.FFmpegPCMAudio("output.wav"))

# ğŸŒ Keep Bot Online (Flask + Render)
app = Flask(__name__)

@app.route('/')
def home():
    return "Bot is running!"

def run():
    app.run(host='0.0.0.0', port=8080)

def keep_alive():
    thread = Thread(target=run)
    thread.start()

keep_alive()
bot.run("token")
